@using Entity.DTOs
@model UpdateRoleDtos

@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/GuardLayout.cshtml";
}

    
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h5 class="mb-0">Rol Bilgilerini Güncelle</h5>
                </div>
                <div class="card-body">
                    <form method="post">

                        <div class="form-group">
                            <label for="Id">Role ID</label>
                            <input type="text" id="Id" name="Id" value="@Model.Id" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label for="name">Rol Adı</label>
                            <input type="text" id="name" name="name" value="@Model.name" class="form-control" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-block">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
  


