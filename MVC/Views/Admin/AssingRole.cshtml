@using Entity.DTOs
@model List<RoleAssignDtos>

@{
    ViewData["Title"] = "AssingRole";
    Layout = "~/Views/Shared/GuardLayout.cshtml";
}


<form method="post">
    @for (int i = 0; i < Model.Count; i++)  @*for döngüsü aracılığı ile rolleri listeleyeceğiz*@
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID" />        @*hidden alanlar(RoleID ve Name) formu sunucuya gönderildiğinde sunucu tarafında işleme alınacak olan verilerdir, kullanıcıya gösterilmezler*@
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input" style="transform: scale(1.5);">

            <label class="form-check-label" for="@Model[i].Exists" style="font-size: 18px;">@Model[i].Name</label>    @*Rol adını gösterir*@
        </div>
    }
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
<br />
<a href="/Admin/UserRoleList/" class="btn btn-primary">Kullanıcı Listesine Dön</a>


