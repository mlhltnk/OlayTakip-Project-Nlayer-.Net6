@using Entity.DTOs
@model UserSignUpDtos

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h3 class="logo-name">IN+</h3>

            </div>
            <h3>Kayıt Ekranı</h3>
            <p>Yeni Bir Hesap Oluşturun.</p>
            <form class="m-t" role="form" asp-action="Index">

                <div class="form-group">
                    <span asp-validation-for="@Model.nameSurname" class="text-danger"></span>                               @*validasyonlarımızın görünmesi için span tanımını ekliyoruz*@
                    <input type="text" class="form-control" asp-for="@Model.nameSurname" placeholder="Adınız Soyadınız">    @*buradaki required="" tanımını validasyonlarımızın görünmesi için siliyoruz*@
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                    <input type="email" class="form-control" placeholder="Email" asp-for="@Model.Mail">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="@Model.UserName">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Şifre" asp-for="@Model.Password">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Şifre Tekrar" asp-for="@Model.ConfirmPassword">
                </div>


                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Kullanım Şartlarını Okudum, Kabul Ediyorum </label></div>
                </div>

                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Bir hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/login/index">Giriş yap</a>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>       @*bu tanım sayesinde kayıt esnasında hatalı girilen tüm validasyonları aşağıda sıralar*@

            </form>
            <p class="m-t"> <small>Tüm hakları saklıdır. | 2024</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="~/inspinia-gh-pages/js/popper.min.js"></script>
    <script src="~/inspinia-gh-pages/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/inspinia-gh-pages/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>

